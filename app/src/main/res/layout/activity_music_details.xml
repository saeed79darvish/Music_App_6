<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5282727"
    android:orientation="vertical"
    tools:context="com.example.saeed.music_app.MusicDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:titleTextColor="#faf8f8"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_activity_playlist"
            style="@style/CategoryStyle"
            android:background="@color/category_main_activity"
            android:text="@string/category_main" />

        <TextView
            android:id="@+id/playList_payment"
            style="@style/CategoryStyle"
            android:background="@color/category_playlist"
            android:onClick="playlist"
            android:text="@string/category_PlayList" />

        <TextView
            android:id="@+id/albums_payment"
            style="@style/CategoryStyle"
            android:background="@color/category_album"
            android:text="@string/category_Albums" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="@color/primary_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            style="@style/CategoryStyle_welcome"
            android:layout_marginTop="10dp"
            android:background="@color/category_welcome"
            android:text="@string/Now_playing_Mediaplayer" />

        <TextView
            android:id="@+id/artist_name_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#fcfafa"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0b0000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/artist_name_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       style="@style/Details_Artists_Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/equlayzer" />

</LinearLayout>
